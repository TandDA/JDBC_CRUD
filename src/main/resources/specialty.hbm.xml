<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.crud.model.Specialty" table="specialty">
        <meta attribute="class-description">
            This class contains specialties details.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="specName" column="name" type="string"/>
        <property name="Status" column="statusId" type="">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">org.crud.model.Status</param>
            </type>
        </property>
    </class>
</hibernate-mapping>